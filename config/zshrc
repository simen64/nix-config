  alias onedrive="cd /Users/simen/Library/CloudStorage/OneDrive-Osloskolen/VG1/IM/IT/"
fi

alias update="sudo xbps-install -u xbps && sudo xbps-install -Suy && flatpak update -y && echo 'FULL UPDATE SCRIPT DONE'"
